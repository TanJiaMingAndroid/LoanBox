<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/line_gray"
    android:orientation="vertical">

    <com.donkingliang.banner.CustomBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="400px"
        app:indicatorStyle="ORDINARY"
        app:indicatorGravity="CENTER"
        app:indicatorInterval="5dp"
        android:background="@drawable/banner"
        app:indicatorSelectRes="@drawable/banner_tips_select"
        app:indicatorUnSelectRes="@drawable/banner_tips_unselect"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="0px"
            android:layout_height="37px"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:src="@drawable/bell" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:text="177****3302 buy licai chanpin $5000"
            android:textColor="@color/index_tip_message"
            android:textSize="@dimen/text_size_26" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:background="@color/white">
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="40px"
            android:layout_gravity="right|center"
            android:src="@drawable/recomm"
            android:layout_marginLeft="10px"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="35px"
            android:layout_gravity="left|center_vertical"
            android:text="@string/index_recommend"
            android:gravity="left"
            android:textColor="@color/index_product_hot"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="5"
            android:layout_height="35px"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:text="Lihat lebih banyak"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="26px"
            android:layout_gravity="center"
            android:src="@drawable/icon_more"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <!--app:indicatorSelectRes="@drawable/banner_tips_oval_select"-->
    <!--app:indicatorUnSelectRes="@drawable/banner_tips_oval_unselect"-->
    <ImageView
        android:id="@+id/iv_one_banner"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:visibility="gone"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/lin_high_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_high_amount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高额度"
                android:layout_marginTop="14dp"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_low_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_low_interest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="利息低"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_fast_lending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_fast_lending"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="放款快"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_handle_card"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_handle_card"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next_white"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="我要办卡"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_repay_card"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_repay_card"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next_white"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="帮你还卡"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_tite_left"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="热门推荐"
        android:textSize="14sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        />

</com.zhy.autolayout.AutoLinearLayout>