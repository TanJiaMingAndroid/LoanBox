<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/line_gray"
    android:orientation="vertical">

    <com.donkingliang.banner.CustomBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:indicatorStyle="ORDINARY"
        app:indicatorGravity="CENTER"
        app:indicatorInterval="5dp"
        app:indicatorSelectRes="@drawable/banner_tips_select"
        app:indicatorUnSelectRes="@drawable/banner_tips_unselect"/>

    <!--app:indicatorSelectRes="@drawable/banner_tips_oval_select"-->
    <!--app:indicatorUnSelectRes="@drawable/banner_tips_oval_unselect"-->
    <ImageView
        android:id="@+id/iv_one_banner"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:visibility="gone"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lin_high_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_high_amount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高额度"
                android:layout_marginTop="14dp"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_low_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_low_interest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="利息低"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_fast_lending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon_fast_lending"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="放款快"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_handle_card"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_handle_card"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next_white"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="我要办卡"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_repay_card"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_repay_card"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next_white"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="帮你还卡"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_tite_left"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="热门推荐"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        />

</LinearLayout>