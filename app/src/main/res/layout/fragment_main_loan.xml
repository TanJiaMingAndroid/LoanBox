<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/person_bg">
    
    <ImageView
        android:id="@+id/iv_index_banner"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:src="@drawable/banner"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="37px"
            android:layout_gravity="center"
            android:src="@drawable/bell"
            android:layout_marginLeft="10px"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:text="177****3302 buy licai chanpin $5000"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/index_tip_message"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="40px"
            android:layout_gravity="right|center"
            android:src="@drawable/recomm"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="35px"
            android:layout_gravity="left|center_vertical"
            android:text="@string/index_recommend"
            android:gravity="left"
            android:textColor="@color/index_product_hot"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="5"
            android:layout_height="35px"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:text="Lihat lebih banyak"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="26px"
            android:layout_gravity="center"
            android:src="@drawable/icon_more"/>

    </com.zhy.autolayout.AutoLinearLayout>

