<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/login_head"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/im_product_detail_pic"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@color/blue2"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"/>
        <TextView
            android:id="@+id/tv_product_detail_name"
            android:layout_toRightOf="@id/im_product_detail_pic"
            android:layout_marginTop="50px"
            android:layout_marginLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品名称"/>
        <TextView
            android:id="@+id/tv_product_detail_slogan"
            android:layout_below="@id/tv_product_detail_name"
            android:layout_alignLeft="@id/tv_product_detail_name"
            android:layout_marginTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品特色口号，额度高审核快！"
            android:textSize="12sp"/>


        <ImageButton
            android:id="@+id/ib_product_detail_collectionPic"
            android:layout_alignParentEnd="true"
            android:layout_width="100px"
            android:layout_height="100px"
            tools:ignore="RtlCompat"
            android:layout_marginTop="30px"
            android:layout_marginRight="20px"
            />
        <TextView
            android:layout_below="@id/ib_product_detail_collectionPic"
            android:layout_alignLeft="@id/ib_product_detail_collectionPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击收藏"/>

    </RelativeLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="@string/loan_market_detail_loan_sum"
                android:gravity="center"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="@string/loan_market_detail_loan_sum_limit"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="10sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="@string/loan_market_detail_loan_duration"
                android:gravity="center"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:text="@string/loan_market_detail_loan_duration_limit"/>

        </LinearLayout>


    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="@string/loan_market_detail_repay_sum"
            android:gravity="right|center_vertical"

            />
        <TextView
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="12323.00"
            android:textColor="@color/red"
            android:gravity="center"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Rp"
            android:gravity="left|center_vertical"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="@string/loan_market_detail_repay_interest"
            android:gravity="right|center_vertical"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="897656.00"
            android:textColor="@color/red"
            android:gravity="center"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="Rp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:src="@mipmap/icon_cahxunpinci"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"/>


    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="申请条件：
            1. 年龄18-48周岁
            2. 有稳定的工作

申请流程：
            1.注册
            2.身份认证
            3.工作认证
            4.填写工作信息
还款方式：
            1.银行卡还款
            2.其他方式还款"/>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#03d485"
        android:textColor="@color/white"
        android:text="@string/loan_market_detail_loan_apply"/>

</com.zhy.autolayout.AutoLinearLayout>
