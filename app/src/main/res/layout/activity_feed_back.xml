<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/person_bg">
    <include layout="@layout/login_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"

        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="top"
            android:hint="@string/person_feedback_hint"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:padding="3dp"
            android:maxLength="200"
            android:background="@color/white"
            android:textSize="28px"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234px"
            android:orientation="vertical"
            android:layout_marginTop="20px"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/person_feedback_upload_pic"
                android:textSize="@dimen/text_size_28"
                android:textColor="#FF6C6C6C"/>

            <FrameLayout

                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/ib_feed_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@mipmap/feedback_pic"/>
                <FrameLayout
                    android:id="@+id/fl_feedback_delete"
                    android:layout_gravity="right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible">
                    <ImageView

                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_feedback_image_delete"
                        android:scaleType="fitCenter"
                        />
                </FrameLayout>

            </FrameLayout>
        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="@string/person_help_service_tel"
        android:textColor="@color/gray"
        android:gravity="center"
        android:textSize="24px"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:text="@string/person_feedback_submit"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"/>

</com.zhy.autolayout.AutoLinearLayout>
